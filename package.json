		"typescript": "~3.7.5",
		"vue-template-compiler": "^2.6.11"
	},
	"gitHooks": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"*.{js,jsx,vue,ts,tsx}": [
			"vue-cli-service lint",
			"git add"
		]
	}
